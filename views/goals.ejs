<%- include("partials/header"); -%>
<div class="content-safe">
<div class="box" id="heading">
   <h1>Goals</h1>
 </div>

 <div class="box">


 <%  goalsItems.forEach(function(goal){ %>

   <form action="/goals" method="post">
     <div class="item">
       <input type="checkbox" name="checkbox" value="<%=goal._id%>" onChange="this.form.submit()">
       <p><%=goal.goal%></p> 
     </div>
     <input type="hidden" name="whattodo" value="delete"></input>
   </form>
 <%  }) %>
     <form class="item" action="/goals" method="post">
       <input type="text" name="newgoal" placeholder="New Goal" autocomplete="off">
       <input type="hidden" name="whattodo" value="add">
       <button type="submit">+</button>
     </form>
 </div>

</div>

<%- include("partials/footer") -%>

